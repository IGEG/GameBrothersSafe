<Window x:Class="GameBrothersSafe.FinishWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameBrothersSafe"
        mc:Ignorable="d"
        Title="FinishWindow" Height="650" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="111*"/>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="155*"/>
        </Grid.RowDefinitions>
        <Image HorizontalAlignment="Center" Height="138" VerticalAlignment="Center" Width="278" RenderTransformOrigin="-3.576,2.991" Source="Img/finish.jpg"/>
        <Label Content="Ура,  Шеф, мы его открыли!" HorizontalAlignment="Center" Margin="0,25,0,0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="-4.072,0.187" FontSize="18px"/>
        <Button Content="Попробовать еще раз" HorizontalAlignment="Center" Margin="0,50,0,0" Grid.Row="2" VerticalAlignment="Top" Height="46" Width="151" Click="Button_RepeatClick"/>
        <Button Content="Выход" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="46" Width="150" Click="Button_Exit"/>

    </Grid>
</Window>
